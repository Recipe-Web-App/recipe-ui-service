{
  "name": "recipe-ui-service",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:integration:frontend": "jest tests/integration/frontend",
    "test:integration:backend": "jest tests/integration/backend",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test tests/e2e",
    "test:e2e:headed": "playwright test tests/e2e --headed",
    "test:performance": "playwright test tests/performance",
    "test:performance:headed": "playwright test tests/performance --headed",
    "test:visual": "playwright test tests/visual",
    "test:a11y": "playwright test tests/e2e/accessibility",
    "test:frontend": "bun run test:unit && bun run test:integration:frontend",
    "test:backend": "bun run test:integration:backend",
    "test:all": "bun run test:unit && bun run test:integration && bun run test:e2e",
    "perf:lighthouse": "lhci autorun --config tests/performance/lighthouse/config.js",
    "perf:bundle": "bun run build && bun run size-limit",
    "perf:load": "jest tests/performance/load-testing --testTimeout=60000",
    "perf:vitals": "playwright test tests/performance/core-web-vitals",
    "stylelint": "stylelint 'src/**/*.{css,scss}'",
    "stylelint:fix": "stylelint 'src/**/*.{css,scss}' --fix",
    "analyze": "ANALYZE=true bun run build",
    "size-limit": "size-limit",
    "knip": "knip",
    "knip:production": "knip --production",
    "madge": "madge --circular --extensions js,jsx,ts,tsx src/",
    "commit": "git-cz",
    "pre-commit": "echo 'Now using pre-commit framework - run: pre-commit run --all-files'",
    "validate:security": "bun run security:scan && bun run security:deps && bun run security:docker && bun run security:k8s",
    "validate:full": "bun run lint:check && bun run type-check && bun run test:all && bun run validate:security",
    "validate:ci": "bun run validate:full && bun run perf:bundle",
    "security:scan": "bunx secretlint . && gitleaks detect --verbose --redact && semgrep --config=auto --error --no-rewrite-rule-ids .",
    "security:deps": "trivy fs --security-checks vuln package.json && bunx license-checker --summary --excludePrivatePackages",
    "security:docker": "hadolint Dockerfile && trivy config . && trivy image recipe-ui-service:latest || echo 'Docker image not built yet'",
    "security:k8s": "find k8s/ -name '*.yml' -o -name '*.yaml' | xargs -I {} sh -c 'kubeval {} && conftest verify --policy conftest-policy.rego {}' 2>/dev/null || echo 'No Kubernetes files found'",
    "security:advanced": "trivy repo . && semgrep --config=p/security-audit --error .",
    "clean:cache": "rm -rf .eslintcache .prettiercache .stylelintcache .tsbuildinfo tsconfig.tsbuildinfo",
    "clean:reports": "rm -rf ./*-report.json .gitleaks-report.json .trivy-report.json .semgrep-report.json",
    "setup": "bun install && bun run build && echo 'âœ… Setup complete! All tools available via bun scripts.'",
    "validate": "bun run validate:full",
    "quality": "bun run lint:check && bun run type-check && bun run test",
    "docs:lint": "bunx markdownlint *.md --fix",
    "deps:check": "bunx madge --circular --extensions js,jsx,ts,tsx src/ && bunx knip --production"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tanstack/react-query": "^5.90.20",
    "@tanstack/react-query-devtools": "^5.91.2",
    "axios": "^1.13.4",
    "class-variance-authority": "^0.7.1",
    "http-status-codes": "^2.3.0",
    "lucide-react": "^0.563.0",
    "next": "^16.1.6",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "react-hook-form": "^7.71.1",
    "sanitize-filename": "^1.6.3",
    "zod": "^4.3.6",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@axe-core/react": "^4.11.0",
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@eslint/eslintrc": "^3.3.3",
    "@next/bundle-analyzer": "^16.1.6",
    "@next/eslint-plugin-next": "^16.1.6",
    "@playwright/test": "^1.58.0",
    "@secretlint/secretlint-rule-aws": "^11.3.0",
    "@secretlint/secretlint-rule-gcp": "^11.3.0",
    "@secretlint/secretlint-rule-github": "^11.3.0",
    "@secretlint/secretlint-rule-npm": "^11.3.0",
    "@secretlint/secretlint-rule-preset-recommend": "^11.3.1",
    "@secretlint/secretlint-rule-slack": "^11.3.0",
    "@size-limit/preset-big-lib": "^12.0.0",
    "@tailwindcss/container-queries": "^0.1.1",
    "@tailwindcss/forms": "^0.5.11",
    "@tailwindcss/postcss": "^4.1.18",
    "@tailwindcss/typography": "^0.5.19",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/jest-axe": "^3.5.9",
    "@types/node": "^25.1.0",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@web/test-runner-playwright": "^0.11.1",
    "@web/test-runner-puppeteer": "^0.18.0",
    "autocannon": "^8.0.0",
    "axe-core": "^4.11.1",
    "axios-mock-adapter": "^2.1.0",
    "clinic": "^13.0.0",
    "clsx": "^2.1.1",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.39.2",
    "eslint-config-next": "16.1.6",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-perf": "^3.3.3",
    "eslint-plugin-react-refresh": "^0.4.26",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^3.0.6",
    "eslint-plugin-unicorn": "^62.0.0",
    "jest": "^30.2.0",
    "jest-axe": "^10.0.0",
    "jest-environment-jsdom": "^30.2.0",
    "knip": "^5.82.1",
    "lighthouse-ci": "^1.13.1",
    "madge": "^8.0.0",
    "markdownlint-cli": "^0.47.0",
    "node-mocks-http": "^1.17.2",
    "postcss-html": "^1.8.1",
    "prettier": "^3.8.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "puppeteer": "^24.36.1",
    "secretlint": "^11.3.1",
    "size-limit": "^12.0.0",
    "stylelint": "^17.0.0",
    "stylelint-config-standard": "^40.0.0",
    "stylelint-config-tailwindcss": "^1.0.1",
    "stylelint-order": "^7.0.1",
    "supertest": "^7.2.2",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "web-vitals": "^5.1.0"
  },
  "overrides": {
    "eslint-plugin-unicorn": {
      "baseline-browser-mapping": "^2.9.18"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
