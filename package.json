{
  "name": "recipe-ui-service",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:integration:frontend": "jest tests/integration/frontend",
    "test:integration:backend": "jest tests/integration/backend",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test tests/e2e",
    "test:e2e:headed": "playwright test tests/e2e --headed",
    "test:performance": "playwright test tests/performance",
    "test:performance:headed": "playwright test tests/performance --headed",
    "test:visual": "playwright test tests/visual",
    "test:a11y": "playwright test tests/e2e/accessibility",
    "test:frontend": "npm run test:unit && npm run test:integration:frontend",
    "test:backend": "npm run test:integration:backend",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "perf:lighthouse": "lhci autorun --config tests/performance/lighthouse/config.js",
    "perf:bundle": "npm run build && npm run size-limit",
    "perf:load": "jest tests/performance/load-testing --testTimeout=60000",
    "perf:vitals": "playwright test tests/performance/core-web-vitals",
    "stylelint": "stylelint 'src/**/*.{css,scss}'",
    "stylelint:fix": "stylelint 'src/**/*.{css,scss}' --fix",
    "analyze": "ANALYZE=true npm run build",
    "size-limit": "size-limit",
    "knip": "knip",
    "knip:production": "knip --production",
    "madge": "madge --circular --extensions js,jsx,ts,tsx src/",
    "commit": "git-cz",
    "pre-commit": "echo 'Now using pre-commit framework - run: pre-commit run --all-files'",
    "validate:security": "npm run security:scan && npm run security:deps && npm run security:docker && npm run security:k8s",
    "validate:full": "npm run lint:check && npm run type-check && npm run test:all && npm run validate:security",
    "validate:ci": "npm run validate:full && npm run perf:bundle",
    "security:scan": "npx secretlint . && gitleaks detect --verbose --redact && semgrep --config=auto --error --no-rewrite-rule-ids .",
    "security:deps": "npm audit --audit-level high && trivy fs --security-checks vuln package*.json && npx license-checker --summary --excludePrivatePackages",
    "security:docker": "hadolint Dockerfile && trivy config . && trivy image recipe-ui-service:latest || echo 'Docker image not built yet'",
    "security:k8s": "find k8s/ -name '*.yml' -o -name '*.yaml' | xargs -I {} sh -c 'kubeval {} && conftest verify --policy conftest-policy.rego {}' 2>/dev/null || echo 'No Kubernetes files found'",
    "security:advanced": "trivy repo . && semgrep --config=p/security-audit --error .",
    "clean:cache": "rm -rf .eslintcache .prettiercache .stylelintcache .tsbuildinfo tsconfig.tsbuildinfo",
    "clean:reports": "rm -rf ./*-report.json .gitleaks-report.json .trivy-report.json .semgrep-report.json",
    "setup": "npm ci && npm run build && echo 'âœ… Setup complete! All tools available via npm scripts.'",
    "validate": "npm run validate:full",
    "quality": "npm run lint:check && npm run type-check && npm run test",
    "docs:lint": "npx markdownlint *.md --fix",
    "deps:check": "npx madge --circular --extensions js,jsx,ts,tsx src/ && npx knip --production"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.85.5",
    "@tanstack/react-query-devtools": "^5.87.1",
    "axios": "^1.11.0",
    "http-status-codes": "^2.3.0",
    "next": "15.5.2",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@axe-core/react": "^4.10.2",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/eslintrc": "^3",
    "@next/bundle-analyzer": "^15.5.2",
    "@next/eslint-plugin-next": "^15.5.2",
    "@playwright/test": "^1.55.0",
    "@secretlint/secretlint-rule-aws": "^11.2.4",
    "@secretlint/secretlint-rule-gcp": "^11.2.4",
    "@secretlint/secretlint-rule-github": "^11.2.0",
    "@secretlint/secretlint-rule-npm": "^11.2.3",
    "@secretlint/secretlint-rule-preset-recommend": "^11.2.4",
    "@secretlint/secretlint-rule-slack": "^11.2.0",
    "@size-limit/preset-big-lib": "^11.2.0",
    "@tailwindcss/container-queries": "^0.1.1",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/postcss": "^4",
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "@web/test-runner-playwright": "^0.11.1",
    "@web/test-runner-puppeteer": "^0.18.0",
    "autocannon": "^8.0.0",
    "axe-core": "^4.10.3",
    "clinic": "^13.0.0",
    "clsx": "^2.1.1",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9",
    "eslint-config-next": "15.5.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-perf": "^3.3.3",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eslint-plugin-unicorn": "^60.0.0",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "knip": "^5.63.0",
    "lighthouse-ci": "^1.13.1",
    "madge": "^8.0.0",
    "markdownlint-cli": "^0.45.0",
    "node-mocks-http": "^1.17.2",
    "postcss-html": "^1.8.0",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "puppeteer": "^24.19.0",
    "secretlint": "^11.2.0",
    "size-limit": "^11.2.0",
    "stylelint": "^16.23.1",
    "stylelint-config-standard": "^39.0.0",
    "stylelint-config-tailwindcss": "^1.0.0",
    "stylelint-order": "^7.0.0",
    "supertest": "^7.1.4",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4",
    "typescript": "^5",
    "web-vitals": "^5.1.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
